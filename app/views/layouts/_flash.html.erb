<% if flash.any? %>
  <div class="flash-messages pt-3">
    <% flash.each do |type, msg| %>
      <div class="alert alert-<%= flash_type type %> alert-dismissible fade show">
        <%= msg %>
        <button type="button" class="close" data-dismiss="alert">
          <span>&times;</span>
        </button>
      </div>
    <% end %>
  </div>
<% end %>
