<%= form_with model: @meta_file, local: true do |f| %>
  <% if @meta_file.errors.any? %>
    <div class="alert alert-danger">
      <% @meta_file.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  <% end %>

  <div class="card mb-3">
    <div class="card-header">修改文件</div>
    <div class="card-body">

      <div class="form-group">
        <%= f.label :name, "文件名" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="d-flex">
    <%= f.submit "保存", class: "btn btn-primary mr-3" %>
    <%= link_to "取消", @meta_file, class: "btn btn-secondary" %>
  </div>
<% end %>
