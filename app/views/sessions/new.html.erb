<h3 class="text-center mb-4">EnveeDisk</h3>

<%= form_with model: @login_form, url: login_path, local: true do |f| %>
  <div class="form-group">
    <%= f.text_field :username, class: "form-control", placeholder: "用户名" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, class: "form-control", placeholder: "密码" %>
  </div>

  <div class="form-group custom-control custom-checkbox">
    <%= f.check_box :remember_me, class: "custom-control-input" %>
    <%= f.label :remember_me, "记住登录状态", class: "custom-control-label" %>
  </div>

  <%= f.submit "登录", class: "btn btn-primary btn-block" %>
<% end %>
